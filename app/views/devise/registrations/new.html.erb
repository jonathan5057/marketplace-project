<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <%= f.fields_for :profile do |profile_form| %>
    <div class="field">

      <%= profile_form.label :first_name %><br />
      <%= profile_form.text_field :first_name, autofocus: true, autocomplete: "First Name" %><br>

      <%= profile_form.label :last_name %><br />
      <%= profile_form.text_field :last_name, autofocus: true, autocomplete: "Last Name" %><br>

      <%= profile_form.label :suburb %><br />
      <%= profile_form.text_field :suburb, autofocus: true, autocomplete: "Suburb" %><br>

      <%= profile_form.label :state %><br />
      <%= profile_form.text_field :state, autofocus: true, autocomplete: "State" %><br>

      <%= profile_form.label :postcode %><br />
      <%= profile_form.text_field :postcode, autofocus: true, autocomplete: "Postcode" %><br>


    </div>
  <% end %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
